<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Page</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        body {
            padding: 20px;
        }

        table {
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        th {
            background-color: #f2f2f2;
        }

        /* Styling for the navigation bar */
        nav {
            background-color: #333;
        }

        nav a {
            color: white;
            padding: 14px 16px;
            text-decoration: none;
            display: inline-block;
        }

        nav a:hover {
            background-color: #ddd;
            color: black;
        }
    </style>
</head>
<body>

    <!-- Top Navigation Bar -->
   <center> <nav>
    <a href="/admin">Dashboard</a>
    <a href="/sup_tab">Supplies</a>
    <a href="/man_tab">Manufacturer</a>
    <a href="">Wholesaler</a>
    <a href="/rt_tab">Retailer</a>
    <a href="/login">Signout</a>
</nav></center>
    <div class="container">
    <h1>Admin Page</h1>

    <!-- Your Table Code (unchanged) -->
    <table class="table table-bordered ">
        <!-- Table Headers -->
        <thead class="thead-light">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>License</th>
                <th>Time</th>
            </tr>
        </thead>
        <!-- Table Body -->
        <tbody>
            <% users.forEach(user => { %>
                <tr>
                    <td><%= user.id %></td>
                    <td><%= user.name %></td>
                    <td><%= user.trade_license %></td>
                    <td><%= user.expiry %></td>
                    <td>
                        
                        <% if (user.type === 'SUPPLIER') { %>
                            <p>SUPPLIER</p>
                        <% } else if (user.type === 'MANUFACTURER') { %>
                            <p>MANUFACTURER</p>

                        <% } else if (user.type === 'RETAILER') { %>
                                <p>RETAILER</p>

                        <% } else if (user.type === 'WHOLESALER') { %>
                            <p>WHOLESALER</p>
                        <% } else if (user.type === 'REQ_SUPPLIER') { %>
                             <form action="/approve_SUP" method="post">
                                <input type="hidden" name="id" id="id" value="<%= user.id %>">
                                <input type="submit" name="sup" id="sup" value="APPROVE SUPPLIER">
                             </form>

                        <% } else if (user.type === 'REQ_MANUFACTURER') { %>
                            <form action="/approve_MAN" method="post">
                               <input type="hidden" name="id" id="id" value="<%= user.id %>">
                               <input type="submit" name="man" id="man" value="APPROVE MANUFACTURER">
                            </form>

                      <% } else if (user.type === 'REQ_RETAILER') { %>
                                <form action="/approve_ret" method="post">
                                   <input type="hidden" name="id" id="id" value="<%= user.id %>">
                                   <input type="submit" name="ret" id="ret" value="APPROVE RETAILER">
                        </form>

                       <% } else if (user.type === 'REQ_WHOLESALER') { %>
                        <form action="/approve_WH" method="post">
                           <input type="hidden" name="id" id="id" value="<%= user.id %>">
                           <input type="submit" name="man" id="man" value="APPROVE WHOLESALER">
                        </form>

                        <% } %>
                        
                        
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
    </div>

    <!-- Bootstrap Scripts -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>
</html>
